{% extends 'base.html.twig' %}

{% block title %}perso index{% endblock %}

{% block body %}
    <div class="container">
        <h1>perso</h1>
        <div class="row">

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>CoordX</th>
                    <th>CoordY</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for perso in persos %}
                    <tr>
                        <td>{{ perso.id }}</td>
                        <td>{{ perso.name }}</td>
                        <td>{{ perso.coordX }}</td>
                        <td>{{ perso.coordY }}</td>
                        <td>
                            <a href="{{ path('perso_show', {'id': perso.id}) }}">show</a>
                            <a href="{{ path('perso_edit', {'id': perso.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No record found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('perso_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
